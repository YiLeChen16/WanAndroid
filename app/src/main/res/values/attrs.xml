<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable 
        name="BannerView">
        <attr name="duration" format="integer"/> <!--轮播时间间隔-->
        <attr name="loop" format="boolean"/> <!--是否自动轮播-->
        <attr name="indicatorNormalColor" format="color"/> <!--指示器未选中颜色-->
        <attr name="indicatorSelectedColor" format="color"/> <!--指示器选中颜色-->
    </declare-styleable>

    <!--这是多类型页面-->
    <declare-styleable name="MultiplyStateView">
        <attr name="msv_loadingView" format="reference" />
        <attr name="msv_successView" format="reference" />
        <attr name="msv_netErrorView" format="reference" />
        <attr name="msv_emptyView" format="reference" />
    </declare-styleable>

    <declare-styleable name="SearchBoxView">
        <attr name="main_color" format="color"/> <!--主颜色-->
        <attr name="change_duration" format="integer"/> <!--热词轮播时间-->
    </declare-styleable>

    <declare-styleable name="ImageView">
        <attr name="imgSrc" format="integer"/><!--图像资源-->
    </declare-styleable>
    
    <declare-styleable name="FlowLayoutView">
        <attr name="lineSpac" format="integer"/><!--行间距-->
        <attr name="columnSpac" format="integer"/><!--列间距-->
        <attr name="maxLines" format="integer"/><!--显示最大行数-->
        <attr name="realMaxLines" format="integer"/><!--实际最大行数,即展开后达到的最大行数-->
    </declare-styleable>
</resources>