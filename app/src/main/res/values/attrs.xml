<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable 
        name="BannerView">
        <attr name="duration" format="integer"/> <!--轮播时间间隔-->
        <attr name="loop" format="boolean"/> <!--是否自动轮播-->
        <attr name="indicatorNormalColor" format="color"/> <!--指示器未选中颜色-->
        <attr name="indicatorSelectedColor" format="color"/> <!--指示器选中颜色-->
    </declare-styleable>

    <!--这是多类型页面-->
    <declare-styleable name="MultiplyStateView">
        <attr name="msv_loadingView" format="reference" />
        <attr name="msv_successView" format="reference" />
        <attr name="msv_netErrorView" format="reference" />
        <attr name="msv_emptyView" format="reference" />
    </declare-styleable>

    <declare-styleable name="SearchBoxView">
        <attr name="main_color" format="color"/> <!--主颜色-->
        <attr name="change_duration" format="integer"/> <!--热词轮播时间-->
    </declare-styleable>

    <declare-styleable name="ImageView">
        <attr name="imgSrc" format="integer"/><!--图像资源-->
    </declare-styleable>
    
    <declare-styleable name="FlowLayoutView">
        <attr name="lineSpac" format="integer"/><!--行间距-->
        <attr name="columnSpac" format="integer"/><!--列间距-->
        <attr name="maxLines" format="integer"/><!--显示最大行数-->
        <attr name="realMaxLines" format="integer"/><!--实际最大行数,即展开后达到的最大行数-->
    </declare-styleable>

    <declare-styleable name="CommonFlowLayoutView">
        <attr name="line_spac" format="integer"/><!--行间距-->
        <attr name="column_spac" format="integer"/><!--列间距-->
    </declare-styleable>

    <!-- 圆形图片 -->
    <style name="circleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="userInfoLeftTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/dp_12</item>
        <item name="android:paddingBottom">@dimen/dp_12</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <!--实现BottomSheetDialog圆角效果-->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>
    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>