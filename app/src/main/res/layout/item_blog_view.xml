<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!--条目使用Databinding        -->
        <!--使用Java某些类都要通过import导入才能正常使用-->
        <import type="android.text.Html"/>
        <import type="android.text.TextUtils" alias="textUtlis" />
        <import type="com.yl.wanandroid.R"/>
        <import type="android.widget.ImageView"/>

        <variable
            name="recommendBlogData"
            type="com.yl.wanandroid.model.ItemData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_8"
            app:cardBackgroundColor="@color/md_theme_surfaceContainer"
            app:cardCornerRadius="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/publish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{recommendBlogData.niceShareDate}"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_10"
                    android:letterSpacing="0.15"
                    android:lineSpacingExtra="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="@{Html.fromHtml(recommendBlogData.title,Html.FROM_HTML_MODE_COMPACT).toString()}"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:searchResultHighlightColor="@color/md_theme_primary"
                    app:layout_constraintHorizontal_bias="0.8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/publish_time" />

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5"
                    app:layout_constraintTop_toBottomOf="@id/title">

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">

                        <TextView
                            android:id="@+id/tv_author_or_shareUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text='@{textUtlis.isEmpty(recommendBlogData.author)?"分享者: ":"作者: "}'
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.15"
                            android:text="@{recommendBlogData.author.isBlank()?recommendBlogData.shareUser:recommendBlogData.author}"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分类："
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/classify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{recommendBlogData.superChapterName}"
                            android:letterSpacing="0.15"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/dp_5"
                    android:src="@{recommendBlogData.collect?R.drawable.iv_collection:R.drawable.iv_no_collection}"
                    android:onClick="@{(view)->recommendBlogData.onCollectClick((ImageView)view,recommendBlogData.collect,recommendBlogData.id)}"
                    app:layout_constraintBottom_toBottomOf="@id/layout1"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>