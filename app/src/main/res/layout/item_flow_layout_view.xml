<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/selector_item_flow"
    android:layout_marginStart="@dimen/dp_5"
    android:layout_marginEnd="@dimen/dp_5">
    <TextView
        android:id="@+id/keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/delete_item"
        android:textColor="@color/md_theme_onSecondaryFixed"
        android:padding="@dimen/dp_5"
        android:paddingStart="@dimen/dp_10"
        android:maxLines="1"
        android:text="哈哈哈哈哈"
        android:maxEms="20"
        android:ellipsize="end"
        android:paddingEnd="@dimen/dp_10" />
    <ImageView
        android:id="@+id/delete_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/keyword"
        android:src="@drawable/baseline_close1_24"
        android:layout_marginStart="@dimen/dp_5"
        android:visibility="gone"
        android:padding="@dimen/dp_5"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>